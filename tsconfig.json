{
  // Visit https://aka.ms/tsconfig to read more about this file
  "compilerOptions": {
    // File Layout
    "rootDir": "./src", //Folder tempat file Typescript
    "outDir": "./dist", //Hasil compile ditaruh di dist
    "baseUrl": ".", //Dasar path (alias)
    "paths": {
      "*": ["node_modules/*"]
    }, //Aturan custom import path
    "typeRoots": ["./src/types", "./node_modules/@types"],

    // Environment Settings
    // See also https://aka.ms/tsconfig/module
    "module": "commonjs", //Format modul node.js
    "target": "es2020", //Output Javascript
    "types": ["node"], //Include type definition node.js
    // For nodejs:
    "lib": ["ES2020"], //API bawaan javascript modern
    // "types": ["node"],
    // and npm install -D @types/node

    // Other Outputs
    "sourceMap": true, //File .map untuk tracking (debugging)
    "declaration": true, //Generate file .d.ts (definisi tipe)
    "declarationMap": true, //Map untuk deklarasi

    // Stricter Typechecking Options
    "noUncheckedIndexedAccess": true, //Akses array atau object kemungkinan undefined
    "exactOptionalPropertyTypes": true, //Penanganan props

    // Style Options
    "noImplicitReturns": true, //Semua function harus return nilai
    // "noImplicitOverride": true,
    "noUnusedLocals": true, //Error kalau ada variabel yang tidak digunakan
    // "noUnusedParameters": true,
    // "noFallthroughCasesInSwitch": true,
    // "noPropertyAccessFromIndexSignature": true,

    // Recommended Options
    "strict": true, //Pengecekan yang ketat
    "jsx": "react-jsx", //Only React
    // "verbatimModuleSyntax": true,
    "isolatedModules": true, //Tiap file dianggap modul sendiri
    // "noUncheckedSideEffectImports": true,
    "moduleDetection": "force", //Paksa semua file dianggap modul sendiri
    "skipLibCheck": true, //Tidak memeriksa node_module
    "esModuleInterop": true, //Agar dapat menggunakan import
    "forceConsistentCasingInFileNames": true, //Cegah perbedaan huruf di linux dan windows
    "noImplicitAny": true, //Dilarang variabel tanpa tipe
    "moduleResolution": "node", //Resolve import seperti node
    "resolveJsonModule": true //Import langsung file dalam bentuk json
  },
  "include": ["src/**/*"], //Folder ini berisi typescript
  "exclude": ["node_modules", "dist"] //Jangan ada typescript di folder ini
}
